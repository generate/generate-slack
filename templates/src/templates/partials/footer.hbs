<!-- Footer -->
<footer class="text-center">
  <div class="footer-above">
    <div class="container">
      <div class="row">
        <div class="footer-col col-md-4 col-md-offset-4">
          <h3>Around the Web</h3>
          <ul class="list-inline">
          {{#if site.twitter}}
            <li>
              <a href="https://twitter.com/{{site.twitter}}" class="btn-social btn-outline"><i class="fa fa-fw fa-twitter"></i></a>
            </li>
          {{/if}}
          {{#if site.github}}
            <li>
              <a href="https://github.com/{{site.github}}" class="btn-social btn-outline"><i class="fa fa-fw fa-github"></i></a>
            </li>
          {{/if}}
          {{#if site.team}}
            <li>
              <a href="https://{{site.team}}.slack.com" class="btn-social btn-outline"><i class="fa fa-fw fa-slack"></i></a>
            </li>
          {{/if}}
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="footer-below">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
            Copyright &copy; {{site.title}} 2016
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
            Slack invite form generated using <a href="https://github.com/generate/generate">generate</a> and the <a href="https://github.com/generate/generate-slack">slack generator</a>
        </div>
      </div>
    </div>
  </div>
</footer>
